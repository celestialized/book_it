<%= form_with(model: schedule, local: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start %>
    <%= form.datetime_select :start, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :end %>
    <%= form.datetime_select :end, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :consultant_id %>
    <%= form.text_field :consultant_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if schedule.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', schedule, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if schedule.persisted? %>
      <%= link_to "Cancel", schedule, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", schedules_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
